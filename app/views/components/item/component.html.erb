<%= turbo_frame_tag dom_id(item, :item_card) do %>
  <div class="flex gap-4 items-start max-w-full">
    <%= link_to item.url, target: "_blank", rel: "noopener noreferrer", class: "flex gap-4 items-start flex-1 min-w-0 group #{user_item_state.read? ? 'opacity-50' : ''}" do %>
      <div class="flex-shrink-0 lg:w-48 lg:h-32 w-32 h-24 relative">
        <% if item.image_url.present? %>
          <%= image_tag item.image_url, class: "w-full h-full rounded object-cover shadow" %>
        <% else %>
          <div class="w-full h-full rounded bg-muted shadow"></div>
        <% end %>
      </div>
      <div class="flex flex-col gap-1 flex-1 min-w-0">
        <div class="body-xs text-text-muted">
          <%= item.source.name %>
        </div>
        <div class="body line-clamp-2 group-hover:text-primary transition-colors">
          <%= item.title %>
        </div>
        <div class="body-sm text-text-secondary sm:line-clamp-2 line-clamp-1">
          <%= item.summary %>
        </div>
        <div class="body-xs text-text-muted flex items-center gap-1">
          <%= helpers.icon("calendar", css: "w-3 h-3") %>
          <%= l item.published_at, format: :long %>
        </div>
      </div>
    <% end %>

    <%= turbo_frame_tag dom_id(item, :user_item_state_actions), data: { turbo_prefetch: false } do %>
      <%= component(:user_item_state_actions, item: item, user_item_state: user_item_state) %>
    <% end %>
  </div>
<% end %>
