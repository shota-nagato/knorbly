<div class="flex items-center gap-2 p-2 rounded hover:bg-object-hover">
  <div class="flex items-center justify-center shadow rounded-full bg-primary text-primary-foreground w-10 h-10">
    <%= helpers.current_user.avatar.attached? ? image_tag(helpers.current_user.avatar, class: "shadow rounded-full") : helpers.current_user.avatar_string %>
  </div>
  <div class="flex flex-col items-start">
    <div class="body-sm">
      <%= helpers.current_user.name %>
    </div>
    <div class="body-xs text-text-muted">
      <%= helpers.current_user.email %>
    </div>
  </div>
</div>
