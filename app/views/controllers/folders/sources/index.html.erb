<%= component("container/app") do %>
  <%= link_to folder_path(@folder), class: "flex items-center gap-1" do %>
    <%= icon("chevron-left", css: "w-4 h-4 text-text-inactive") %>
    <div class="body-sm text-text-inactive"><%= t(".back_to_folder") %></div>
  <% end %>

  <div class="mt-4">
    <%= component(:heading, size: :h1, text: t(".title")) %>
    <div class="mt-2">
      <div class="flex flex-col gap-2">
        <% @sources.each do |source| %>
          <div class="flex items-center justify-between gap-4">
            <%= link_to source.url, target: :_blank, class: "flex flex-col gap-1 w-full hover:bg-background-muted p-2 rounded" do %>
              <div class="body text-text-primary">
                <%= source.name %>
              </div>
              <div class="body-xs text-text-muted">
                <%= source.description %>
              </div>
            <% end %>
            <%= render partial: "controllers/source_subscriptions/button", locals: {folder: @folder, source: source} %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
