<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

<div class="flex items-center justify-center h-screen">
  <div class="w-full lg:max-w-md md:max-w-sm sm:max-w-xs px-4">
    <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-4" do |form| %>
      <%= component(:input, form: form, label: :password, field_type: :password_field, attribute_key: :password, placeholder: "⚫⚫︎⚫︎⚫︎⚫︎⚫︎⚫︎") %>
      <%= component(:input, form: form, label: :password_confirmation, field_type: :password_field, attribute_key: :password_confirmation, placeholder: "⚫⚫︎⚫︎⚫︎⚫︎⚫︎⚫︎") %>
      <%= component(:submit_button, form: form, text: "Save", class_name: "w-full mt-2") %>
    <% end %>
  </div>
</div>
