<%= component("container/auth") do %>
  <%= form_with url: passwords_path, class: "space-y-4" do |form| %>
    <%= component(:input, form: form, label: User.human_attribute_name(:email), field_type: :email_field, attribute_key: :email, placeholder: "user@example.com") %>
    <%= component(:submit_button, form: form, text: t(".submit"), class_name: "w-full mt-2") %>
  <% end %>
<% end %>
