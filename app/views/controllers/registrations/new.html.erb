<%= component("container/auth") do %>
  <%= form_with model: @user, url: registration_path, class: "space-y-4" do |form| %>
    <%= render "shared/error_messages", resource: @user %>

    <%= component(:input, form: form, label: User.human_attribute_name(:email), field_type: :email_field, attribute_key: :email, placeholder: "user@example.com") %>
    <%= component(:input, form: form, label: User.human_attribute_name(:password), field_type: :password_field, attribute_key: :password, placeholder: "⚫⚫︎⚫︎⚫︎⚫︎⚫︎⚫︎") %>
    <%= component(:input, form: form, label: User.human_attribute_name(:password_confirmation), field_type: :password_field, attribute_key: :password_confirmation, placeholder: "⚫⚫︎⚫︎⚫︎⚫︎⚫︎⚫︎") %>
    <%= component(:button, type: "submit", class_name: "w-full mt-2") { t(".submit") } %>
  <% end %>
<% end %>
