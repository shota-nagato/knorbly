<%= component("container/auth") do %>
  <%= form_with url: session_path, class: "space-y-4" do |form| %>
    <%= component(:input, form: form, label: User.human_attribute_name(:email), field_type: :email_field, attribute_key: :email, placeholder: "user@example.com") %>
    <%= component(:input, form: form, label: User.human_attribute_name(:password), field_type: :password_field, attribute_key: :password, placeholder: "⚫⚫︎⚫︎⚫︎⚫︎⚫︎⚫︎") %>
    <%= component(:button, type: "submit", class_name: "w-full mt-2") { t(".submit") } %>
  <% end %>

  <div class="relative my-4">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="bg-white px-2 text-gray-500">Or continue with</span>
    </div>
  </div>

  <div class="flex justify-center">
    <%= button_to "/auth/google_oauth2", method: :post, class: "hover:opacity-80 hover:cursor-pointer", data: { turbo: false } do %>
      <%= icon("google", css: "w-full") %>
    <% end %>
  </div>

  <div class="mt-2 flex justify-center">
    <%= component(:button, variant: :link, href: new_password_path) { t(".forgot_password") } %>
  </div>
<% end %>
