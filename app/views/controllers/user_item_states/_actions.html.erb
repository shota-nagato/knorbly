<div class="flex flex-col items-center gap-1">
  <% if user_item_state&.read? %>
    <%= button_to item_user_item_state_path(item, status: :unread),
      method: :patch,
      class: "p-1 text-primary hover:text-primary/80 transition-colors rounded-full hover:bg-background-muted",
      title: t("user_item_states.mark_as_unread"),
      data: { turbo_stream: true } do %>
      <%= icon("check-circle", css: "w-5 h-5") %>
    <% end %>
  <% else %>
    <%= button_to item_user_item_state_path(item, status: :read),
      method: :patch,
      class: "p-1 text-text-muted hover:text-primary transition-colors rounded-full hover:bg-background-muted",
      title: t("user_item_states.mark_as_read"),
      data: { turbo_stream: true } do %>
      <%= icon("check-circle", css: "w-5 h-5") %>
    <% end %>
  <% end %>

  <% unless user_item_state&.archived? %>
    <%= button_to item_user_item_state_path(item, status: :archived),
      method: :patch,
      class: "p-1 text-text-muted hover:text-primary transition-colors rounded-full hover:bg-background-muted",
      title: t("user_item_states.archive"),
      data: { turbo_stream: true } do %>
      <%= icon("archive-box", css: "w-5 h-5") %>
    <% end %>
  <% end %>
</div>
